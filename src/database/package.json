{
  "name": "@teamd/database",
  "version": "1.0.0",
  "description": "Team D database schema overlay and local extensions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "generate": "node scripts/generate-migration.js",
    "generate:simple": "drizzle-kit generate",
    "migrate": "tsx src/migrate.ts",
    "push": "drizzle-kit push",
    "studio": "drizzle-kit studio",
    "promote": "node src/scripts/promote-schema.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@large-event/database": "workspace:*",
    "drizzle-orm": "^0.30.10",
    "pg": "^8.11.5"
  },
  "devDependencies": {
    "@types/pg": "^8.11.5",
    "drizzle-kit": "^0.21.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "default": "./dist/schemas/index.js"
    },
    "./overlays": {
      "types": "./dist/overlays/index.d.ts",
      "default": "./dist/overlays/index.js"
    }
  }
}